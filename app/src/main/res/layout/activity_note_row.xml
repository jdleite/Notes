<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/id_card_view"
    android:layout_width="195dp"
    android:layout_height="300dp"
    android:layout_margin="5dp"
    android:clickable="true"
    app:cardBackgroundColor="#97B6F6"
    app:cardCornerRadius="4dp">

    <ImageView
        android:id="@+id/id_img_close"
        android:layout_width="50dp"
        android:layout_height="80dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="240dp"
        android:src="@drawable/close_foreground" />

    <TextView
        android:id="@+id/id_txt_date"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="270dp"
        android:textColor="#333399"
        android:text="23/08/1986"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:orientation="vertical">



        <TextView
            android:id="@+id/id_txt_record"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="20sp" />



    </LinearLayout>


</androidx.cardview.widget.CardView>